// Shared data structures
export struct FileEntry {
    name: string,
    path: string,
    depth: int,
    is-folder: bool,
    is-expanded: bool,
    status: string,
}

export struct PrCommitEntry {
    sha: string,
    short-sha: string,
    summary: string,
    author: string,
    is-selected: bool,
}

export struct DiffLine {
    line-type: string,      // "add", "remove", "context", "hunk", "comment"
    old-line-num: string,
    new-line-num: string,
    content: string,
    // Comment fields (empty for non-comments)
    comment-author: string,
    comment-body: string,
    comment-timestamp: string,
    comment-is-reply: bool,
}
